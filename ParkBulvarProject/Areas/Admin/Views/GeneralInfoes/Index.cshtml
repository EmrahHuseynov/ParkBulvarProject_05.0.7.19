@model IEnumerable<ParkBulvarProject.Models.Entities.Tables.GeneralInfo>

@{
    ViewData["Title"] = "Index";
}

<div class="card">
    <div class="card-header">
        Ümumi məlumatlar
    </div>
    <div class="card-body">
        @if (Model.Count() == 0)
        {
            <div class="text-center mb-3 mt-3">
                <a asp-action="Create" class="btn btn-success">
                    <i class="fas fa-plus"></i> Yenisini əlavə et
                </a>
            </div>
        }

        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Phone)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.WorkHours)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.HowToGo)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Phone)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.WorkHours)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.HowToGo)
                        </td>

                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id"><i class="fas btn btn-primary fa-edit"></i></a>
                            <a class="btn btn-danger" onclick="return confirm('Silmək istədiyinizdən əminsiniz?');" asp-action="DeleteConfirmed" asp-route-id="@item.Id"><i class="fas fa-trash-alt"></i></a>
                        </td>

                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>



