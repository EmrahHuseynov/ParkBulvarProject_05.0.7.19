@model ParkBulvarProject.Models.Entities.HomeSliderItem

@{
    ViewData["Title"] = "Edit";
}

<div class="card">
    <div class="card-header">
        Yenisini əlavə et
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Edit" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group ">
                        <label asp-for="Link" class="control-label"></label>
                        <input asp-for="Link" class="form-control" />
                        <span asp-validation-for="Link" class="text-danger"></span>
                    </div>
                    <div class="col-md-12 mt-4 wrapper edit">
                        <input asp-for="Image" class="form-control d-none" />
                        <label class="btn btn-success" for="image">Şəkil Yüklə</label>
                        <input id="image" type="file" name="img" value="" class="d-none imginput1" /> <br />
                        <img src="~/assets/img/mainSlider/@Model.Image" class="editedImage newimage" width="100" height="100" alt="Alternate Text" />
                        <span asp-validation-for="Image" class="text-danger"></span> <br />
                    </div>
                    <div class="form-group d-none">
                        <label asp-for="Queue" class="control-label"></label>
                        <input asp-for="Queue" class="form-control" />
                        <span asp-validation-for="Queue" class="text-danger"></span>
                    </div>
                    <div class="col-md-12 mt-3">
                        <a class="btn btn-dark" asp-action="index"><i class="fas fa-undo"></i> Siyahıya geri dön</a>
                        <input type="submit" value="Əlavə et" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

