@model IEnumerable<ParkBulvarProject.Models.Entities.SubShopCategory>

@{
    ViewData["Title"] = "Index";
}


<div class="card">
    <div class="card-header">
        Alt kateqoriya
    </div>
    <div class="card-body">
        <div class="text-center mb-3 mt-3">
            <a asp-action="Create" class="btn btn-success">
                <i class="fas fa-plus"></i> Yenisini əlavə et
            </a>
        </div>
        <table class="table" data-emrah="subshopcategories">
            <thead>
                <tr>
                    <th>
                        Ad
                    </th>
                    <th>
                        Kateqoriya
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr data-id="@item.Id">
                        <td>
                            @item.SubShopCategoryDictionaries.First().Name
                        </td>
                        <td>
                            @item.ShopCategory.ShopCategoryDictionaries.First().Name
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id"><i class="fas btn btn-primary fa-edit"></i></a>
                            <a class="btn btn-danger" onclick="return confirm('Silmək istədiyinizdən əminsiniz?');" asp-action="DeleteConfirmed" asp-route-id="@item.Id"><i class="fas fa-trash-alt"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>



