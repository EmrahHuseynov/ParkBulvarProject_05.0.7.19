@model ParkBulvarProject.Models.Entities.ShopCategory

@{
    ViewData["Title"] = "Edit";
}

<div class="card">
    <div class="card-header">
        Yenisini əlavə et
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <form asp-action="Edit" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <div class="row ">
                            <div class="col-md-6 mt-4 wrapper">
                                <input asp-for="CoverImage" class="form-control d-none" />
                                <label class="btn btn-success" for="image">Cover Yüklə</label>
                                <input id="image" type="file" name="img" value="" class="d-none imginput" /> <br />
                                <img src="~/assets/img/iconSlider/@Model.CoverImage" class="editedImage newimage"  width="100" height="100" alt="Alternate Text" />
                                <span asp-validation-for="CoverImage" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mt-4">
                                <input asp-for="Logo" class="form-control d-none" />
                                <label class="btn btn-success" for="image1">İkon Yüklə</label>
                                <input multiple id="image1" type="file" name="logo" value="" class="d-none imginput" /> <br />
                                <img src="~/assets/img/iconSlider/@Model.Logo" class="editedImage newimage"  width="100" height="100" alt="Alternate Text" />
                                <span asp-validation-for="Logo" class="text-danger"></span>
                            </div>
                            <div class="form-group d-none">
                                <label asp-for="Queue" class="control-label"></label>
                                <input asp-for="Queue" class="form-control" />
                                <span asp-validation-for="Queue" class="text-danger"></span>
                            </div>

                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="card">
                                <div class="card-header">
                                    Tərcümə olunacaq dillər
                                </div>
                                <div class="card-body">
                                    <ul class="nav nav-pills mb-3 text-center" id="pills-tab" role="tablist">
                                        @{
                                            int b = 0;
                                        }
                                        @foreach (var item in db.languages)
                                        {
                                            <li style="width:32%" class="nav-item ml-2 bg-secondary ">
                                                <a class="nav-link @(b==0 ? "active" : "") text-white" id="pills-@item.Code-tab" data-toggle="pill" href="#pills-@item.Code" role="tab" aria-controls="pills-home" aria-selected="true">@item.Name</a>
                                            </li>
                                            b++;
                                        }
                                    </ul>
                                    <div class="row justify-content-center">
                                        <div class="col-md-6 col-6">
                                            <div class="tab-content" id="pills-tabContent ">
                                                @{
                                                    int i = 0;
                                                }
                                                @foreach (var item in Model.ShopCategoryDictionaries)
                                                {
                                                <div class="col-md-12 col-12 tab-pane fade @(i==0 ? "show active" : "")" id="pills-@item.Language.Code" role="tabpanel">
                                                    <label>Ad</label>
                                                    <input type="text" class="form-control" name="ShopCategoryDictionaries[@i].Name" value="@item.Name" />
                                                    <input type="hidden" class="form-control" name="ShopCategoryDictionaries[@i].Id" value="@item.Id" />
                                                    <input type="hidden" class="form-control" name="ShopCategoryDictionaries[@i].ShopCategoryId" value="@item.ShopCategoryId" />
                                                    <input type="hidden" class="form-control" name="ShopCategoryDictionaries[@i].LanguageId" value="@item.LanguageId" />
                                                </div>
                                                    i++;
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>


                    <div class="col-md-12 mt-3">
                        <a class="btn btn-dark" asp-action="index"><i class="fas fa-undo"></i> Siyahıya geri dön</a>
                        <input type="submit" value="Əlavə et" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
