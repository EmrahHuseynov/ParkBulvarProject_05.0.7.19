@model IEnumerable<ParkBulvarProject.Models.Entities.Shop>

@{
    ViewData["Title"] = "Index";
}
<div class="card">
    <div class="card-header">
        Mağazalar
    </div>
    <div class="card-body">

        <div class="text-center mb-3 mt-3">
            <a asp-action="Create" class="btn btn-success">
                <i class="fas fa-plus"></i> Yenisini əlavə et
            </a>
        </div>

        <table class="table" data-emrah="shops">
            <thead>
                <tr>
                    <th>
                        Logo
                    </th>
                    <th>
                        Ad
                    </th>

                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    var dic = item.ShopDictionaries.FirstOrDefault();

                    <tr>
                        <td>
                            <img src="~/assets/img/magazalar/@item.Logo" width="100" height="100" alt="Alternate Text" />
                        </td>

                        @if (dic != null)
                        {
                            <td>

                                @dic.Name

                            </td>
                        }


                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id"><i class="fas btn btn-primary fa-edit"></i></a>
                            <a class="btn btn-danger" onclick="return confirm('Silmək istədiyinizdən əminsiniz?');" asp-action="DeleteConfirmed" asp-route-id="@item.Id"><i class="fas fa-trash-alt"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>



